bcdata bc2pg -r whse_forest_tenure.ften_road_section_lines_svw
bcdata bc2pg -r whse_mineral_tenure.og_road_segment_permit_sp

# other loads
jobs/cabd
jobs/whse_basemapping.transport_line

# update derivative products
jobs/bcfishobs